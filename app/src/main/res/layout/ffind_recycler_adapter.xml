<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_f_find_recycler_linearlayout"
    android:layout_width="800dp"
    android:layout_height="80dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#E8E8E8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/adapter_f_find_recycler_iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/qa_send_question_nor"
            fresco:placeholderImage="@drawable/user_icon_default"

        android:scaleType="fitXY"/>


    <!--<ImageView-->
        <!--android:paddingTop="5dp"-->
        <!--android:paddingBottom="5dp"-->
        <!--android:id="@+id/adapter_f_find_recycler_iv_photo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:src="@drawable/qa_send_question_nor"-->
        <!--android:scaleType="fitXY"-->

        <!--/>-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
    <TextView
        android:id="@+id/adapter_f_find_recycler_tv_nicheng"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="我是我"
        android:textColor="@color/text_hei"
        />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/adapter_f_find_recycler_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="20岁"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/adapter_f_find_recycler_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="男"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/adapter_f_find_recycler_tv_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="100公里"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_f_find_recycler_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="不告诉你"
        />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>