<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_load1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.wangxueshi.youyuanwang.activity.LoadActivity">
    <!--仿沉浸式-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#72C3C7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/load_top"
        android:orientation="vertical"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#72C3C7"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/load_iv_fanhui"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/load_tv_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:text="注册"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/a_load_scro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="用户登录"
        android:textColor="#000000"
        android:textSize="30sp" />
<com.bawei.wangxueshi.youyuanwang.widget.EditTextWithDel
    android:layout_marginTop="20dp"
    android:id="@+id/load_et_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="手机号"
    style="@style/edittext_hint"
    android:maxLength="11"
    android:digits="0123456789"
    android:imeOptions="actionNone"
    />
    <com.bawei.wangxueshi.youyuanwang.widget.EditTextWithPassWord
        android:imeOptions="actionDone"
        android:layout_marginTop="10dp"
        android:id="@+id/load_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        style="@style/edittext_hint"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />
<Button

        android:id="@+id/load_bt_load"
        android:text="登录"
        style="@style/button_load"
        />

<TextView

    android:id="@+id/load_tv_youke"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="手机号快捷登录"
    android:textColor="@color/text_hui"
    android:textSize="15sp"
    />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
