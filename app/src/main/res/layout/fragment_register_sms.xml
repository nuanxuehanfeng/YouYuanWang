<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入你的手机号"
        android:textSize="25sp"
        android:textColor="@color/text_hui"
        android:gravity="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手机号仅用于登录和保护账号"
        android:textSize="15sp"
        android:textColor="@color/text_hei"
        android:gravity="center"
        />
    <com.bawei.wangxueshi.youyuanwang.widget.EditTextWithDel
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:id="@+id/register_sms_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号码"
        android:text="15609909090"
        android:maxLength="11"
        style="@style/edittext_hint"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/register_sms_et_yanzhema"
            android:text="1111"
            android:hint="请输入验证码"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:inputType="number"
            android:imeOptions="actionDone"
            style="@style/edittext_hint"
        />
        <Button
            android:id="@+id/register_sms_bt_getyan"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="获得验证码"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/huoyanzhengma"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/register_sms_bt_next"
        android:text="下一步"
        android:gravity="center"
        style="@style/button_load"
        />
</LinearLayout>